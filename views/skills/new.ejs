<% include ../partials/links %>
<body>
  <div class="ui container">
    <h1 class="ui dividing header">New Skill</h1>
    <form class="ui form" action="/well" method="POST">
      <div class="six wide field">
        <label>Skill Name</label>
        <input type="text", name="name" placeholder="name">
      </div>
      <div class="fields">
        <div class="three wide field">
          <label>Skill Notes</label>
          <input type="text", name="type" placeholder="type">
        </div>    
        <div class="three wide field">
          <label>Well API</label>
          <input type="text", name="id" placeholder="type">
        </div>
      </div>
      <div class="six wide field">
        <label>Spud Date</label>
        <input type="date", name="spud_date" placement="Spud Date">
      </div>
      <div class="three wide field">
        <label>Total Depth</label>
        <input type="number", name="well_status" placement="Total Depth">
      </div>
      
      
      <input class="ui submit button" type="submit">
      <a class="ui button" href="/well">Well Index</a>
      </form>
    </div>
  </div>
</body>